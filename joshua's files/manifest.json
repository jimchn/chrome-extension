{
    "name": "MDNQL",
    "version": "1.0",
    "description": "Quick MDN Lookup",
    "permissions": ["declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "tuturu.png" 
        }
    },
    "icons": {
        "48": "tuturu.png"
    },
    "manifest_version": 2
